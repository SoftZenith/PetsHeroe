<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
    x:Class="PetsHeroe.View.Nuevo_Servicio_Promo"
    Title="Nueva promoción servicio">
    <ContentPage.Content>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <input:AdvancedEntry
                BorderColor="#FF7100"
                TextFontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Row="0"
                Grid.ColumnSpan="6"
                IconImage="code.png"
                Margin="8,4,8,0"
                Placeholder="Descripción de la promoción"
                TextColor="black"
                x:Name="txtNombrePromo">
            </input:AdvancedEntry>

            <Label
                FontSize="18"
                FontFamily="Lobster-Regular"
                Grid.ColumnSpan="3"
                Grid.Row="1"
                HorizontalOptions="EndAndExpand"
                Margin="16,0,16,0"
                Text="A partir del:"
                VerticalOptions="CenterAndExpand">
            </Label>
            <DatePicker
                FontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Grid.Row="1"
                Margin="16,0,16,0"
                MinimumDate="{Binding hoy}"
                x:Name="txtAPartir">
            </DatePicker>

            <Label
                FontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="2"
                HorizontalOptions="EndAndExpand"
                Margin="16,0,16,0"
                Text="Hasta el:"
                VerticalOptions="CenterAndExpand">
            </Label>
            <DatePicker
                FontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Grid.Row="2"
                Margin="16,0,16,0"
                MinimumDate="{Binding hoy}"
                x:Name="txtHasta">
            </DatePicker>

            <Frame
                BorderColor="#FF7100"
                CornerRadius="20"
                Grid.ColumnSpan="6"
                Grid.Row="3"
                Margin="8,0,8,0"
                Padding="4,4,4,4">
                <Picker
                    FontSize="18"
                    FontFamily="Lobster-Regular"
                    Grid.ColumnSpan="6"
                    Grid.Row="3"
                    Title="Tipo de mascota"
                    x:Name="pkrTipoMascota">
                </Picker>
            </Frame>

            <Frame
                BorderColor="#FF7100"
                CornerRadius="20"
                Grid.ColumnSpan="6"
                Grid.Row="4"
                Margin="8,0,8,0"
                Padding="4,4,4,4">
                <Picker
                    FontSize="18"
                    FontFamily="Lobster-Regular"
                    Title="Servicios"
                    x:Name="pkrServicio">
                </Picker>
            </Frame>

            <input:AdvancedEntry
                BorderColor="#FF7100"
                TextFontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Row="5"
                Grid.ColumnSpan="6"
                IconImage="code.png"
                Keyboard="Numeric"
                Margin="8,4,8,0"
                Placeholder="Precio"
                TextColor="black"
                x:Name="txtPrecio">
            </input:AdvancedEntry>

            <input:AdvancedEntry
                BorderColor="#FF7100"
                TextFontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Row="6"
                Grid.ColumnSpan="6"
                IconImage="code.png"
                Margin="8,4,8,0"
                Placeholder="Unidades a comprar"
                TextColor="black"
                x:Name="txtUnidades">
            </input:AdvancedEntry>

            <input:CheckBox
                TextFontSize="18"
                FontFamily="Lobster-Regular"
                Grid.ColumnSpan="6"
                Grid.Row="7"
                Margin="16,0,16,0"
                Text="Activo"
                x:Name="chkActivo">
            </input:CheckBox>

            <Button
                BackgroundColor="#006561"
                BorderColor="#FF7100"
                BorderWidth="2"
                CornerRadius="16"
                Clicked="onGuardarPromo"
                FontSize="18"
                FontFamily="Lobster-Regular"
                Grid.Column="1"
                Grid.ColumnSpan="4"
                Grid.Row="8"
                Text="Guardar"
                TextColor="White">
            </Button>

        </Grid>
    </ContentPage.Content>
</ContentPage>
