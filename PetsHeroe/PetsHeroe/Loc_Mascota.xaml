<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PetsHeroe.Loc_Mascota">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Entry
            Grid.Column="0"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="8,0,0,0"
            Placeholder="Ingresar codigo manual">
        </Entry>
        <Button
            Grid.Column="2"
            Grid.Row="3"
            Margin="0,0,8,0"
            Text="Escanear">
        </Button>

        <Picker Title="¿Como deseas entregar la mascota?"
                Grid.Row="5"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="8,0,8,0"
                VerticalOptions="FillAndExpand"
                x:Name="pkrTipoMascota">
            <Picker.Items>
                <x:String>Llévame a un centro de atención PetsHeroe</x:String>
                <x:String>Manda un mensaje a mi dueño para que se comunique contigo</x:String>
                <x:String>Toma nota del lugar donde me encuentro Pet's Heroe se encargara</x:String>
            </Picker.Items>
        </Picker>

    </Grid>
</ContentPage>
